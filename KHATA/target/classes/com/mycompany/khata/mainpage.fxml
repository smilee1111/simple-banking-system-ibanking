<AnchorPane style="-fx-background-color: #A259FF;" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mycompany.khata.MainPageController">
    <children>
        <HBox spacing="20" alignment="TOP_RIGHT" AnchorPane.topAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0">
            <children>
                <Label text="iBanking" style="-fx-font-size: 24px;" />
                <HBox.HBoxConstraints>
                    <HBox.HBoxConstraints>
                        <HBox.HBoxConstraints hgrow="ALWAYS" />
                    </HBox.HBoxConstraints>
                </HBox.HBoxConstraints>
                <Label text="Saw Ye Maw" />
                <Button text="Logout" />
            </children>
        </HBox>
        <VBox spacing="10" padding="10" AnchorPane.topAnchor="60.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0">
            <children>
                <Label text="Current Account Summary" style="-fx-font-size: 18px;" />
                <GridPane hgap="10" vgap="10">
                    <children>
                        <Label text="Account ID:" />
                        <Label fx:id="accountIdLabel" text="10002" GridPane.columnIndex="1" />
                        <Label text="Amount:" GridPane.rowIndex="1" />
                        <Label fx:id="amountLabel" text="$693,423.00" GridPane.rowIndex="1" GridPane.columnIndex="1" />
                        <Label text="Type:" GridPane.rowIndex="2" />
                        <Label fx:id="typeLabel" text="Saving Account" GridPane.rowIndex="2" GridPane.columnIndex="1" />
                    </children>
                </GridPane>
                <Label text="Account Selected" style="-fx-background-color: #d4f4d7; -fx-padding: 5px;" />
                <GridPane hgap="20" vgap="20" padding="20">
                    <children>
                        <Button fx:id="detailsButton" text="Details" onAction="#handleDetailsButtonAction">
                            <graphic>
                                <ImageView>
                                    <Image url="@com/mycompany/khata/details.png" />
                                </ImageView>
                            </graphic>
                        </Button>
                        <Button fx:id="depositButton" text="Deposit" onAction="#handleDepositButtonAction" GridPane.columnIndex="1">
                            <graphic>
                                <ImageView>
                                    <Image url="@com/mycompany/khata/deposit.png" />
                                </ImageView>
                            </graphic>
                        </Button>
                        <Button fx:id="withdrawButton" text="Withdraw" onAction="#handleWithdrawButtonAction" GridPane.columnIndex="2">
                            <graphic>
                                <ImageView>
                                    <Image url="@com/mycompany/khata/withdraw.png" />
                                </ImageView>
                            </graphic>
                        </Button>
                        <Button fx:id="transferCashButton" text="Transfer Cash" onAction="#handleTransferCashButtonAction" GridPane.rowIndex="1">
                            <graphic>
                                <ImageView>
                                    <Image url="@com/mycompany/khata/transfer.png" />
                                </ImageView>
                            </graphic>
                        </Button>
                        <Button fx:id="transactionHistoryButton" text="Transaction History" onAction="#handleTransactionHistoryButtonAction" GridPane.rowIndex="1" GridPane.columnIndex="1">
                            <graphic>
                                <ImageView>
                                    <Image url="@com/mycompany/khata/history.png" />
                                </ImageView>
                            </graphic>
                        </Button>
                        <Button fx:id="myInformationButton" text="My Information" onAction="#handleMyInformationButtonAction" GridPane.rowIndex="1" GridPane.columnIndex="2">
                            <graphic>
                                <ImageView>
                                    <Image url="@com/mycompany/khata/information.png" />
                                </ImageView>
                            </graphic>
                        </Button>
                    </children>
                </GridPane>
            </children>
        </VBox>
    </children>
</AnchorPane>
