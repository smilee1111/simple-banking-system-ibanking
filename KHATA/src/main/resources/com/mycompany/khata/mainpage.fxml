<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mycompany.khata.MainPageController">
    <children>
        <HBox alignment="TOP_RIGHT" spacing="20" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">
            <children>
                <Label style="-fx-font-size: 24px;" text="iBanking" />
                <Label text="Saw Ye Maw" />
                <Button text="Logout" />
            </children>
        </HBox>
        <VBox alignment="CENTER" spacing="10" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="60.0">
            <children>
                <Label style="-fx-font-size: 20px;" text="Welcome to iBanking" />
                <Button text="View Accounts" />
                <Button text="Transfer Funds" />
                <Button text="Transaction History" />
            </children>
        </VBox>
        <ImageView fx:id="bankLogo" fitHeight="100" fitWidth="200" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">
            <image>
            <Image url="@details.png" />
            </image>
        </ImageView>
    </children>
</AnchorPane>
